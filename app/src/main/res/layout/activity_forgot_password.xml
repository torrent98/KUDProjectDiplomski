<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="150dp"
        android:padding="15dp"
        android:background="@drawable/orange_shape_corner">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your registered e-mail to recieve password reset link"
            android:textAlignment="center"
            android:textSize="22sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_condensed_bold"
            android:id="@+id/reset_password_text"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emial_star_chng"
            android:layout_below="@+id/reset_password_text"
            android:layout_marginTop="40dp"
            android:text="E-mail*"
            android:padding="6dp"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/edit_text_pwd_reset_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emial_star_chng"
            android:background="@drawable/border"
            android:fontFamily="@font/roboto_condensed_bold"
            android:hint="Enter your registered e-mail..."
            android:minHeight="48dp"
            android:padding="6dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reset_pwd"
            android:padding="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/edit_text_pwd_reset_email"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_back"
            android:text="Reset password"
            android:textAllCaps="false"
            android:textColor="@color/orange_nav"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/idPBLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_reset_pwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_back"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>