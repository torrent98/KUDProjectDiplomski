<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcg_color_gradient"
    tools:context=".members.ViewMemberDetails">

    <TextView
        android:id="@+id/imeIPrezime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:gravity="center"
        android:text="Ime i Prezime"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/adresaIgraca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imeIPrezime"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:fontFamily="@font/roboto_condensed_light"
        android:text="Adresa"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/rankIgraca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adresaIgraca"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:fontFamily="@font/roboto_condensed_light"
        android:text="Rank"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editMemberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rankIgraca"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FF5722"
        android:src="@drawable/ic_edit" />

    <ProgressBar
        android:id="@+id/idPBLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_back"
        android:visibility="gone" />

</RelativeLayout>